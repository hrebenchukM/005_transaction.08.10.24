
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" /> 
<script>

  window.onload = function() {

  var btn = document.getElementById('btn');
  var errorContainer = document.getElementById('errorMsg'); 
  btn.onclick = sendData;

  function sendData() {
  var xhr = new XMLHttpRequest();

  xhr.open('POST','/Groups/Add/newGroup');


  var inputs = document.getElementsByTagName('input');

              // валидация ввода пользователя 
              for (var i = 0; i < inputs.length - 1; i++) { 
              
                  if (inputs[i].value == '') { 
                 
                    // обработка ошибок 
                    errorContainer.innerHTML = 'Error! Empty Field!'
                    console.log('Empty Field!'); 
                    return;  
                  
                    }
              } 
              
              errorContainer.innerHTML = ''; 
              
              var group = {
                Name: inputs[0].value, 
                Id_Faculty: inputs[1].value
              }; 
              
              var data = JSON.stringify(group); 
              
              xhr.setRequestHeader('Content-Type', 'application/json'); 
              
              xhr.send(data); 
              
          
      } 
      
                
   }
</script>
<div class="panel well">
    <h3>Add group!</h3>
    <div class="form-group">
        <label>Group Name: <input type="text" class="form-control" /></label> 
    </div>

    <div class="form-group">
        <label>Id_Faculty: <input type="number" class="form-control" /></label>
    </div>
 
    <div class="form-group">
        <a class="btn btn-lg btn-info" href="/" id="btn">Apply</a> 
        <h5 style="color: red; font-weight: bold" id="errorMsg"><h5>
    </div>
</div>